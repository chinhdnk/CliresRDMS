@page "/cliressystem/admin/permission"
@inject NavigationManager NavigationManager
@inject IPermissionService PermissionService
@inject ILanguageContainerService languageContainer

@attribute [Authorize]
    <!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@languageContainer.Keys["permission_detail:permission_management"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@languageContainer.Keys["layout:administration"]</a></li>
                    <li class="breadcrumb-item active">@languageContainer.Keys["layout:permission"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with minimal features & hover style</h3>
                    </div>
                    <div class="card-body">
                        @if (permission != null)
                        {
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>@languageContainer.Keys["permission_detail:permission_name"]</th>
                                        <th>@languageContainer.Keys["permission_detail:status"]</th>
                                        <th>@languageContainer.Keys["permission_detail:created_by"]</th>
                                        <th>@languageContainer.Keys["permission_detail:created_date"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var perm in permission)
                                    {
                                        <tr>
                                            <td>
                                                @perm.PermissionID
                                            </td>
                                            <td>
                                                <NavLink href="@($"/permission/{perm.PermissionID}")">
                                                    @perm.PermissionName
                                                </NavLink>
                                            </td>
                                            <td>
                                                @perm.Status
                                            </td>
                                            <td>
                                                @perm.CreatedBy
                                            </td>
                                            <td>
                                                @(perm.CreatedDate.ToString("yyyy-MM-dd"))
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        }

                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary" @onclick="AddPermission">Add Permission</button>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

@code {
    IEnumerable<Permission> permission;

    protected override async Task OnInitializedAsync()
    {
        //languageContainer.InitLocalizedComponent(this);
        permission = await PermissionService.ViewPermissionAsync();
    }


    //protected override async Task OnParametersSetAsync()
    //{

    //}

    private void AddPermission()
    {
        NavigationManager.NavigateTo($"/permission/addpermission");
    }

}

