@page "/cliressystem/admin/group"

@inject NavigationManager navigationManager
@inject IGroupService groupService
@inject ILanguageContainerService languageContainer

@attribute [Authorize(Roles = "GROUP_VIEW")]
    <!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@languageContainer.Keys["group:group_management"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@languageContainer.Keys["layout:administration"]</a></li>
                    <li class="breadcrumb-item active">@languageContainer.Keys["layout:group"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with minimal features & hover style</h3>
                    </div>
                    <div class="card-body">
                        @if (groups != null)
                        {
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>@languageContainer.Keys["group:group_name"]</th>
                                        <th>@languageContainer.Keys["common:status"]</th>
                                        <th>@languageContainer.Keys["common:created_by"]</th>
                                        <th>@languageContainer.Keys["common:created_date"]</th>
                                        <th>@languageContainer.Keys["common:action"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var group in groups)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>
                                                @group.GroupName
                                            </td>
                                            <td>
                                                @group.Status
                                            </td>
                                            <td>
                                                @group.CreatedBy
                                            </td>
                                            <td>
                                                @(group.CreatedDate.ToString("yyyy-MM-dd"))
                                            </td>
                                            <td>
                                                <AuthorizeView Roles="PERMISSION_EDIT">
                                                    <NavLink href="@($"/cliressystem/admin/group/{group.GroupID}")" class="btn btn-info btn-xs">
                                                        @languageContainer.Keys["common:edit"]
                                                    </NavLink>
                                                </AuthorizeView>
                                                <AuthorizeView Roles="PERMISSION_DELETE">
                                                    <button type="button" @onclick="() => DeleteGroup(group.GroupName)" class="btn btn-danger btn-xs">@languageContainer.Keys["common:delete"]</button>
                                                </AuthorizeView>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        }

                    </div>
                    <div class="card-footer">
                        <AuthorizeView Roles="GROUP_CREATE">
                            <button class="btn btn-primary" @onclick="AddGroup">@languageContainer.Keys["group:add_group"]</button>
                        </AuthorizeView>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<DialogModel @ref="dialogModel"></DialogModel>

@code {
    DialogModel dialogModel;
    IEnumerable<Group> groups;
    bool showModel;
    int index = 1;
    protected override async Task OnInitializedAsync()
    {
        languageContainer.InitLocalizedComponent(this);
        groups = await groupService.ViewGroupAsync();
    }

    private void AddGroup()
    {
        navigationManager.NavigateTo($"/cliressystem/admin/group/addgroup");
    }

    private void DeleteGroup(string groupName)
    {
        dialogModel.confirmationTitle = "Confirm Delete";
        dialogModel.confirmationMessage = $"Do you want to delete this group {groupName}";
        dialogModel.Show();

    }
}

