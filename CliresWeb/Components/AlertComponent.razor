<div class="alert @AlertTheme"
     style="@($"display: {display}")"
     role="alert">
    @((MarkupString)ErrorMessage)

</div>

@code {
    string display = "none";
    public string AlertTheme { get; set; } = "alert-warning";

    public string ErrorMessage { get; set; }

    public void Show()
    {
        display = "block";
        StateHasChanged();
    }

    public void Dismiss()
    {
        display = "none";
        ErrorMessage = string.Empty;
    }

}
