@inherits LayoutComponentBase
@inject ILanguageContainerService languageContainer

<AuthorizeView>
    <Authorized>
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">@languageContainer.Keys["layout:home"]</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/home/contact" class="nav-link">@languageContainer.Keys["layout:contact"]</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <div class="navbar-nav ml-auto">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <LanguageSelector />
                    </li>
                    <!-- Messages Dropdown Menu -->
                    <LoginStatusComponent></LoginStatusComponent>
                </ul>
            </div>
        </nav>
        <!-- /.navbar -->
        <NavMenu />


        <div class="content-wrapper">
            @Body
        </div>


        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2019 <a href="http://clires.com">CliresV3.0</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>@languageContainer.Keys["layout:version"]</b> 3.0.5
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </Authorized>
    <NotAuthorized>
        <div class="main">
            @Body
        </div>
    </NotAuthorized>
</AuthorizeView>

